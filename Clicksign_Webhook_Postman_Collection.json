	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:5173",
			"type": "string",
			"description": "URL base do seu sistema (ex: http://localhost:5173 para dev, ou https://seu-dominio.com para produção)"
		},
		{
			"key": "envelope_key",
			"value": "SUBSTITUA_PELA_CHAVE_DO_ENVELOPE",
			"type": "string",
